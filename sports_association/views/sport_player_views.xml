<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="sport_player_tree" model="ir.ui.view">
        <field name="name">Sport players</field>
        <field name="model">sport.player</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree string="players">
                <field name="name" />
                <field name="birthdate" />
                <field name="age" />
                <field name="position" />
                <field name="team_id" />
                <field name="starter" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <record id="sport_player_simple_tree" model="ir.ui.view">
        <field name="name">sport.players.simple.tree</field>
        <field name="model">sport.player</field>
        <field name="type">tree</field>
        <field name="priority" eval="100" />
        <field name="arch" type="xml">
            <tree string="players">
                <field name="name" />
                <field name="age" />
                <field name="position" />
                <field name="starter" widget="boolean_toggle" />
            </tree>
        </field>
    </record>

    <record id="sport_player_form" model="ir.ui.view">
        <field name="name">Sport player Form</field>
        <field name="model">sport.player</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="player">
                <header>
                    <!-- <button name="action_check_assistance" string="Check Assistance"
                    type="object" -->
                    <!-- class="oe_highlight" /> -->
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="player Name" />
                        </h1>
                    </div>
                    <group>
                        <field name="position" />
                        <field name="starter" widget="boolean_toggle" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sport_player_simple_form" model="ir.ui.view">
        <field name="name">sport.player.simple.form</field>
        <field name="model">sport.player</field>
        <field name="priority" eval="100" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="player">
                <sheet>
                    <field name="name" placeholder="player Name" />
                </sheet>
            </form>
        </field>
    </record>

</odoo>